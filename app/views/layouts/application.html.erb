<!DOCTYPE html>
<html>
  <head>
    <title>Schedule Tracker</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<div class="all">
  <body>
    <header>
      <h1>Schedule Tracker</h1>
    </header>

    <%= render "layouts/sidebar" %>

    <div class="main">
      <%= yield %>
    </div>

    <div class="primary">
      <% if flash[:message] %>
        <p class="flash-message">
        <%= flash[:message] %></p>
      <% end %>

      </div>

    <footer>
      <p>
        Welcome to the schedule tracker app!
      </p>
    </footer>
  </body>
</div>
</html>
